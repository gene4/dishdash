datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Ingredient {
  id        String      @id @default(uuid())
  name      String
  userId    String
  unit      String
  price     Int
  createdAt DateTime @default(now())
  supplier    String
  category    String
  updatedAt DateTime @updatedAt

}